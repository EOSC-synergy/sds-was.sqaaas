 <html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
 >
<metal:row define-macro="page-title" i18n:domain="sdswas.events">
    <section class="banner-top bg-color-white">
        <div class="banner-top-wrap main-wrap main-padding">
            <div class="banner-top-container main-container">
                <div class="page-title">
                    <h1 tal:content="page_title"/>
                </div>
            </div>
        </div>
    </section>
</metal:row>

<metal:row define-macro="modalsectiontitle" i18n:domain="sdswas.events">
  <section class="modwin-title-section">
    <div class="modwin-title-wrap modwin-padding">
      <div class="modwin-title-container">
        <div class="modwin-title">
          <h2 tal:content="context/title"/>
        </div>
      </div>
    </div>
  </section>
</metal:row>

<metal:row define-macro="filedownload" i18n:domain="sdswas.events">
    <h4 tal:content="title"></h4>
    <a class="outlined-cta"
        href="${context/absolute_url}/@@download/document/${view/w/document/filename}"
        target="_self">
      <p>DOWNLOAD</p>
        <i class="icon-download"></i>
    </a>
</metal:row>

<metal:row define-macro="share-buttons" i18n:domain="sdswas.events">

    <h4>Share</h4>

    <div class="share-btns">

        <a href="#" class="share-btn" title="Share on Facebook">
        <i class="icon-facebook"></i>
        </a>

        <a href="#" class="share-btn" title="Share on Twitter">
        <i class="icon-twitter"></i>
        </a>

        <a href="#" class="share-btn" title="Share on LinkedIn">
        <i class="icon-linkedin"></i>
        </a>

    </div>

</metal:row>

<metal:row define-macro="breadcumb" i18n:domain="sdswas.events">

  <!--Resource breadcrum btn -->
  <section
        tal:define="text_upcoming string:< Back to Upcoming Events;
                    text_past string:< Back to Resources;
                    url_upcoming string:${portal_url}/news-events/events/;
                    url_past string:${portal_url}/resources/;
                    text python:text_upcoming if is_upcoming else text_past;
                    url python:url_upcoming if is_upcoming else url_past;">
    <div class="modwin-title-wrap bg-color-white">
      <a class="modwin-back-link modwin-main-content" tal:attributes="href url">
        <p class="breadcrum-text" tal:content="text"></p>
      </a>
    </div><!-- Resource breadcrum btn ends -->
  </section>

</metal:row>

<metal:row define-macro="upcoming_event_teaser" i18n:domain="sdswas.events">

    <!-- Card thumb -->
    <a class="events-upco-card-thumb js-card-trigger" href="#" target="_self">

    <img tal:attributes="src string:${url}/@@images/image/grid-teaser;
                            alt title;
                            width string:380px;
                            height string:206px" />


    </a><!-- Card thumb ends -->

    <!-- Card content -->
    <div class="events-upco-card-content">

        <div class="events-upco-card-subtitle">
            <h4 tal:content="small_info"></h4>
        </div>

        <div class="events-upco-card-small-info">
            <p tal:content="python:item['location']"></p>
        </div>

        <a class="events-upco-card-title js-card-trigger">
            <h3 tal:content="python:item['title']"/>
        </a>

        <a class="events-upco-text-link js-card-trigger">
            <p>Read more</p>
        </a>
    </div><!-- Card content ends -->

</metal:row>

<!--Idem than macro "resource_without_preview" from sdswas.resources addon-->
<metal:row define-macro="past_event_teaser" i18n:domain="sdswas.events">
  <!-- Card content -->
  <div class="pastev-card-content">

    <a class="pastev-card-title js-card-trigger"><h3 tal:content="title"/></a>
    <div class="pastev-card-small-info"><p tal:content="small_info"></p></div>

 </div><!-- Card content ends -->

  <!-- Resources card cta -->
  <a class="pastev-card-cta js-card-trigger">

    <div class="card-cta-icon"><i class="icon-event"></i></div>
    <div class="card-cta-text"><p>Read more</p><i class=""></i></div>

  </a><!-- Resources card cta ends -->
</metal:row>

<metal:row define-macro="generic_event_menu" i18n:domain="sdswas.events">
   <ul class="modwin-anchor-navigation">
      <li tal:condition="nocall:agenda">
        <a href="#agenda">
          <p class="modwin-anchor-link-p">Agenda</p>
        </a>
      </li>
      <li tal:condition="nocall:images">
        <a href="#images">
          <p class="modwin-anchor-link-p">Images</p>
        </a>
      </li>
      <li tal:condition="hasPresentations">
        <a href="#presentations">
          <p class="modwin-anchor-link-p">Presentations</p>
        </a>
      </li>
    </ul>

</metal:row>

<metal:row define-macro="images_carousel" i18n:domain="sdswas.events">
    <div class="carousel slide" id="generic-event-images" data-ride="carousel" >
    <div class="carousel-inner">
            <tal:loop repeat="item items">
                <div tal:define="activeclass string:carousel-item active;
                            nonactiveclass string:carousel-item;
                            index repeat/item/index"
                    tal:attributes="class python:activeclass if index==0 else nonactiveclass">
                    <img class="d-block w-100" tal:attributes="src item/absolute_url"/>
            </div>
        </tal:loop>
    </div>

    <a class="carousel-control-prev" href="#generic-event-images" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#generic-event-images" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    </div>
</metal:row>

<metal:row define-macro="subscribe" i18n:domain="sdswas.events">

    <!--Subscribe-->
    <section class="subscribe-widget bg-color-white">
      <div class="blue-ribbon"></div>
      <div class="main-wrap main-padding">
        <div class="subscribe-widget-container main-container">

          <p class="subscribe-description">
            Do you want to know more? Stay connected and subscribe to the SDS-WAS newsletter and be informed about
            the next events, latest news and resources.
          </p>

          <a class="subscribe-cta" onclick=" window.location.href='${context/portal_url}/contact';" target="_self">
            <p>Subscribe</p>
          </a>
        </div>
      </div><!-- Subscribe widget container ends -->
    </section>    <!--Subscribe end-->

</metal:row>

</html>
