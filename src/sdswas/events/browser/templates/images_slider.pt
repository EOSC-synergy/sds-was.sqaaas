 <html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
 >
<metal:row define-macro="slider" i18n:domain="sdswas.events">

    <!-- Modal window image slider -->
    <section id="images" class="modwin-img-slider-section">

        <div class="modwin-img-slider-wrap modwin-padding">
            <div class="modwin-img-slider-container">

            <div class="modwin-img-slider-title">
                <h2>Images</h2>
            </div>

            <!-- Slider component -->
            <!-- Give your slider an id and style it -->
            <div id="modwin-img-slider" class="slider">

                <!-- Slider items -->
                <div id="slider-items" class="slider-items">

                    <!-- Mobile swipe area -->
                    <div id="mobile-swipe-area" class="mobile-swipe-area"></div>
                    <!-- Mobile swipe area ends -->

                    <tal:row tal:repeat="item images">

                        <!-- Item -->
                        <div class="slider-item-wrap slider-i-1">
                            <div class="slider-item-container">
                                <div class="slider-img-item">
                                    <img class="slider-img"
                                            tal:attributes="src string:${item/absolute_url};
                                            alt item/title;" />
                                </div>
                            </div>
                        </div><!-- Item ends -->

                    </tal:row>

                </div><!-- Slider items ends -->

                <!-- Slider indicators -->
                <div class="slider-indicators">
                    <div class="slider-indicators-wrap">
                        <div class="slider-indicators-container">
                            <!-- Generated -->
                        </div>
                    </div>
                </div><!-- Slider indicators -->

                <!-- Slider control previous button -->
                <div class="slider-control s-control-l">
                <a id="previous-btn" class="slider-round-btn">
                    <i class="icon-previous"></i>
                </a>
                </div><!-- Slider control previous button  ends -->

                <!-- Slider control next button -->
                <div class="slider-control s-control-r">
                <a id="next-btn" class="slider-round-btn">
                    <i class="icon-next"></i>
                </a>
                </div><!-- Slider control next button ends -->


            </div><!-- Slider component ends -->

            </div>
        </div>

    </section><!-- Modal window image slider ends -->

</metal:row>